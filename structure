import React, { useEffect, useState, useContext } from "react";
import { getUserTasks } from "../../api/userApi";
import { AuthContext } from "../../context/AuthContext";
import Navbar from "../../components/Navbar";
import Sidebar from "../../components/Sidebar";

export default function UserTasks() {
  const { email } = useContext(AuthContext);
  const [tasks, setTasks] = useState([]);
  const userId = localStorage.getItem("userId") || null; // optional: your backend returns ID after login â€” if not, user must pass id
  useEffect(() => {
    // For demo fetch tasks for a provided userId (adjust as needed)
    const fetch = async () => {
      try {
        if (!userId) return;
        const res = await getUserTasks(userId);
        setTasks(res.data);
      } catch (e) {
        console.error(e);
      }
    };
    fetch();
  }, [userId]);

  return (
    <div className="layout">
      <Navbar />
      <Sidebar items={[{ to: "/user/dashboard", label: "Dashboard" }]} />
      <div className="main">
        <h3>Tasks</h3>
        {tasks.length === 0 ? <div>No tasks found (or userId not supplied).</div> : (
          <table className="table">
            <thead><tr><th>ID</th><th>Description</th><th>Status</th><th>Deadline</th></tr></thead>
            <tbody>
              {tasks.map(t => (
                <tr key={t.taskId}><td>{t.taskId}</td><td>{t.description}</td><td>{t.status}</td><td>{new Date(t.deadline).toLocaleDateString()}</td></tr>
              ))}
            </tbody>
          </table>
        )}
      </div>
    </div>
  );
}


export default function formatError(err) {
  if (!err) return "Unknown error";

  // If backend returned response
  if (err.response) {
    const data = err.response.data;

    // Backend returned plain string
    if (typeof data === "string") return data;

    // Backend returned { message: "" }
    if (data?.message) return data.message;

    // Backend returned { error: "" }
    if (data?.error) {
      return typeof data.error === "string"
        ? data.error
        : JSON.stringify(data.error);
    }

    // Fallback parse
    try {
      return JSON.stringify(data);
    } catch {
      return "Server error";
    }
  }

  // If request never reached server
  return err.message || "Network error";
}


